datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  image     String   @default("")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
 
  @@map("users")
}

model Student {
  id            Int      @id @default(autoincrement())
  
  name          String
  roll_no       Int
  class         String
  fees          Int
  medium        String
  profile_image String   @default("")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  

  @@map("students")
}



